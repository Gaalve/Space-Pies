{
  "name": "game-base",
  "version": "1.0.0",
  "description": "A code base for round-based game.",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.6",
    "canvas": "^2.5.0",
    "chai": "4.2.0",
    "copy-webpack-plugin": "^5.0.2",
    "expose-loader": "0.7.5",
    "jsdom": "15.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "ts-loader": "5.3.3",
    "ts-node": "8.1.0",
    "typescript": "3.3.3",
    "webpack": "4.29.4",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "@types/jest": "^24.0.13",
    "guid": "0.0.12",
    "phaser": "3.16.2"
